{% block html_head_container %}
	{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
</head>
{% endblock %}
<body class="{{body_class}}" data-template="base.twig">
{% block header %}
	<header class="header bg--yellow flex flex-wrap justify--between spacing--gutter spacing--vert-1 font--semi-bold align--center">
		<a class="hdr-logo-link" href="/" rel="home">
			{% if post.post_name == 'home'  %}
				<i class="icon-logo" data-grunticon-embed></i>
				{# <i class="icon-logo-horiz dsk--hide" data-grunticon-embed></i> #}
			{% else %}
				<i class="icon-logo-horiz" data-grunticon-embed></i>
			{% endif %}
		</a>
		<div class="flex flex-wrap align--end flex--column grid--sm-three-fourths nog nav-wrap">
			{% include 'components/sections/section--social.twig' %}
			{% include 'components/navigation.twig' %}
		</div>
		<label class="trigger--nav dsk--hide">
			<span></span>
			<hr>
			<span></span>
		</label>
		{% if post.post_name == 'home' %}
			<div class="section--home-intro grid--one spacing--dsk-vert-5 spacing--vert-2 spacing--gutter flex justify--center">
				<div class="grid--md-two-thirds font--headline text--center">
					{{home.intro_text}}
				</div>
			</div>
		{% endif %}
	{% endblock %}
</header>
{# {{header.image|.}} #}
{% if header.image.file  %}
	<section class="header-image">
		{# <img src=""> #}
		<picture>
			<source media="(max-width: 20em)" srcset="{{header.image|resize(800, 480)}} 1x, {{header.image|resize(1200,720)}} 2x">
			<source media="(max-width: 40em)" srcset="{{header.image|resize(1200)}}">
			<img src="{{header.image|resize(1200)}}" >
		</picture>
	</section>
{% endif %}
<main role="main" class="content-wrapper">
{% if title %}<h1>{{title}}</h1>{% endif %}
{% block content %}
	Sorry, no content
{% endblock %}
</main>
{% block footer %}
	<footer class="bg--yellow  spacing--lg-horiz-6 border--top-thick">
		<i class="icon-logo mobile--hide" data-grunticon-embed></i>
		{% include 'footer.twig' %}
	</footer>
	{{ function('wp_footer') }}
{% endblock %}
</body>
</html>