{% extends "base.twig" %}
{% block content %}
	<article class="post-type-{{post.post_type}} " id="post-{{post.ID}}">
		<section class="spacing--gutter max-wrap init-large-p spacing--vert-1 spacing--dsk-vert-4">
			{{post.content}}
		</section>
		<section class="flex flex-wrap">
		{% for tour in blocks %}
			<a href="{{site.url}}/all-tours/?tour={{tour.title}}" class="bg--image grid--one grid--sm-half nog overlay spacing--vert-4 spacing--dsk-vert-6 border--4 color--white edges" style="background-image:url('{{tour.image}}')">
				<h2 class="color--yellow border text--center">{{tour.title}}</h2>
			</a>
		{% endfor %}
	</section>
	</article>
{% endblock %}